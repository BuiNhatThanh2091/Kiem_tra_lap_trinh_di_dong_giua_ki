<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Header -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác thực OTP"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã OTP đã được gửi đến số điện thoại của bạn"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

    <!-- OTP Input Fields -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/et_otp_1"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_otp_2"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_otp_3"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_otp_4"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_otp_5"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_otp_6"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Timer and Resend -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại mã"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:clickable="true"
        android:padding="8dp"
        android:layout_marginBottom="32dp"/>

    <!-- Verify Button -->
    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Xác thực"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"/>

    <!-- Help Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã OTP: 123456 để demo"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>